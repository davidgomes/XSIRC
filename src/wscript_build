source = bld.path.ant_glob('*.vala')
flags = ['-g']

if bld.env['windows'] == 'yes':
	flags.extend(['-mms-bitfields', '-mwindows'])

bld.stlib(
	source = 'gen_timestamp.c',
	includes = '.. .',
	cflags = ['-fPIC'],
	target = 'timestamp'
)

bld.shlib(
	source = bld.path.ant_glob('*.vala'),
	features  = 'c cshlib',
	packages  = 'gtk+-3.0 gio-2.0 gee-1.0 posix config glib-2.0 gmodule-2.0',
	vapi_dirs = '../vapi',
	includes  = '../vapi',
	target    = 'libxsirc',
	use       = 'timestamp',
	cflags    = ['-include','config.h','-g'],
	linkflags = flags,
	uselib    = 'GTK GLIB GIO GEE GMODULE',
)

bld.program(
	source    = 'main/main.vala',
	features  = 'c cprogram',
	packages  = 'gtk+-3.0 gio-2.0 gee-1.0 posix config glib-2.0 gmodule-2.0 libxsirc',
	vapi_dirs = '../vapi',
	includes  = '../vapi .',
	target    = 'xsirc',
	use       = 'timestamp libxsirc',
	cflags    = ['-include','config.h','-g'],
	linkflags = flags,
	uselib    = 'GTK GLIB GIO GEE GMODULE',
)
